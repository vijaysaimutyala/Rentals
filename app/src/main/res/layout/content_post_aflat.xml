<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="abc.com.example.vijsu.rentals.Activities.PostAFlatActivity"
    tools:showIn="@layout/activity_post_aflat">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="50dp"
    android:id="@+id/linearLayout1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="For: "
        android:layout_gravity="center"
        android:id="@+id/ForTxtView"
        android:textColor="#000000"
        android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/forRadioGroup"
        android:layout_weight="1"
        android:weightSum="3">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Boys"
            android:id="@+id/boyradioButton"
            android:layout_weight="1">
        </RadioButton>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Girls"
            android:id="@+id/mston"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Family"
            android:id="@+id/familyradioButton"
            android:layout_weight="1"/>

    </RadioGroup>
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="5dp"
    android:id="@+id/line1"
    android:layout_below="@id/linearLayout1"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_below="@id/line1">


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sharingRadioGroup"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sharing"
            android:id="@+id/sharingradioButton"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Non Sharing"
            android:layout_gravity="center"
            android:id="@+id/nonSharingRadioButton"
            android:layout_weight="1"/>

    </RadioGroup>

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line2"
    android:layout_below="@id/linearLayout2"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout3"
    android:layout_below="@id/line2">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rooms Available: "
        android:textColor="#000000"
        android:layout_gravity="center"
        android:id="@+id/RoomsTxtView"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/RoomsAvailableEditTxt"
        android:inputType="number"
        android:ems="10"
        android:padding="5dp"
        android:entries="@array/noOfRooms"
        android:layout_gravity="center"
        android:background="@drawable/rectangle"
        android:layout_weight="1"/>

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line3"
    android:layout_below="@id/linearLayout3"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout4"
    android:layout_below="@+id/line3"
    android:orientation="vertical">


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/bhkRadioGroup">


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1 BHK"
            android:id="@+id/oneBhkradio"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2 BHK"
            android:layout_gravity="center"
            android:id="@+id/twoBhkradio"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3 BHk"
            android:id="@+id/threeBhkradio"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Duplex"
            android:id="@+id/duplexradio"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </RadioGroup>

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line4"
    android:layout_below="@id/linearLayout4"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout5"
    android:layout_below="@id/line4"
    android:layout_marginTop="10dp">


    <RadioGroup

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/furnishedRadioGroup"
        android:layout_weight="1"
        android:weightSum="3">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Furnished"
            android:id="@+id/furnishedradioButton"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Un furnished"
            android:id="@+id/unfurnisheradioButton"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Semi Furnished"
            android:id="@+id/semifurnishedradioButton"
            android:layout_weight="1"/>
    </RadioGroup>

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line5"
    android:layout_below="@id/linearLayout5"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout6"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_below="@id/line5">


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acRadioGroup"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/acradioButton"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Non AC"
            android:layout_gravity="center"
            android:id="@+id/nonacRadioButton"
            android:layout_weight="1"/>

    </RadioGroup>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line6"
    android:layout_below="@id/linearLayout6"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout7"
    android:layout_below="@id/line6"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rent: "
        android:textColor="#000000"
        android:layout_gravity="center"
        android:id="@+id/RentTxtView"
        android:layout_weight="1" />

    <EditText
        android:layout_width="10dp"
        android:layout_height="35dp"
        android:inputType="number"
        android:padding="5dp"
        android:ems="10"
        android:background="@drawable/rectangle"
        android:layout_gravity="center"
        android:id="@+id/RentEditTxt"
        android:layout_weight="1"/>

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:id="@+id/line7"
    android:layout_below="@id/linearLayout7"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout8"
    android:layout_below="@id/line7">

    <EditText
        android:id="@+id/detailsEditTxt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:background="@drawable/rectangle"
        android:gravity="left|top"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:inputType="textMultiLine"
        android:hint="Specify any details"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Submit"
        android:id="@+id/btn_submitBtn"
        android:layout_gravity="center"/>

</LinearLayout>

</RelativeLayout>
    </ScrollView>